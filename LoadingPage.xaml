<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="demo.LoadingPage"
             Title="LoadingPage">
    <Shell.TitleView >
        <HorizontalStackLayout HorizontalOptions="Start">
            <Image Source="localshoppy_yellow.png"  HorizontalOptions="Center" VerticalOptions="Center" Margin="0,10"/>
            <Label Text="Localshoppy" HorizontalOptions="Start" VerticalOptions="Center" FontSize="20" FontAttributes="Bold" Padding="5,0,0,0"/>
        </HorizontalStackLayout>
    </Shell.TitleView>
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <ActivityIndicator Color="{StaticResource Primary}"
                               IsRunning="True" HeightRequest="50" WidthRequest="50"
                               IsVisible="True" />
        <Label Text="Checking authentication..." HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>